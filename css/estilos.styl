body
  padding-top: 60px
  padding-bottom: 40px

div#menu_collapse:hover
  background-color: #FFF

  h4 a:hover
    text-decoration: none  
  
div.par-botones
  margin: 1em 0
  text-align: center

div.par-botones input[type="button"]
  padding: 2em 2em
  margin: 0 .5em
  display: inline-block
  width: 42%
  font-size: 1.8em
  border-radius: .5em
  background-color: #3498db
  background-repeat: no-repeat
  background-position: center
  color: #FFF

div.par-botones input[type="button"]:hover
  padding: 2em 2em
  margin: 0 .5em
  display: inline-block
  width: 42%
  font-size: 1.8em
  border-radius: .5em
  background-color: #FFF
  background-repeat: no-repeat
  background-position: center
  color: #3498db
  
div.tablas-propias
  overflow: auto
  height: 300px
  text-align: center
  
  a:hover
    cursor: pointer
    color: #3498db
    text-decoration: none

fieldset
  border-width: .1em
  border-style: solid
  border-color: #3498db
  border-radius: .5em
  padding: .5em

.mijumbotron label
  background-color: #FFF
  border-radius: .5em
  padding: .3em
  font-weight: bold
  font-size: 1.3em

table.calendario
  margin: auto
  border-collapse: collapse
  
.botones a
  background-color: #AAA
  padding: 2em
  margin: 1em

.mijumbotron
  background-color: #eee
  padding: 1em
  border-radius: .5em

.sidebar-nav
  padding: 10px auto

.calendario
  font-family: Arial
  font-size: 1.4em

.calendario .dias td
  width: 80px
  height: 70px
  padding: 4px
  border: 1px solid #999
  vertical-align: top
  background-color: #DEF

.calendario .dias td:hover
  /*background-color: #FFF;*/

.calendario .highlight
  font-weight: bold
  color: #00F

.calendario .dias td:nth-child(6)
  background-color: #FFB9C4

.calendario .dias td:nth-child(7)
  background-color: #FFB9C4

.table-scroll
  
    
  thead, tbody
    display: block
    width: 100%
    text-align: center
  
  tbody
    overflow: auto
    height: 300px 
  
  th, td
    padding: .2em 0
    width: 16em
  
  th 
    background-color: skyblue
  
  th:nth-child(1)
    width: 16.5em
    
  th:nth-child(2)
    width: 15em
       
  th:nth-child(5)
    width: 13em    

  th:nth-child(6)
    width: 13em
  
  a:hover
    cursor: pointer
    color: #3498db
    text-decoration: none  

  

.valido
  padding: 1em
  background-color: #98FF98
  border-color: #0CE886
  border-radius: .5em
  border-style: solid
  border-width: 2px
  color: #0DFF4E
  font-family: Helvetica
  -webkit-transform: rotate(-10deg)
  -moz-transform: rotate(-10deg)
  -o-transform: rotate(-10deg)
  -ms-transform: rotate(-10deg)

.novalido
  padding: 1em
  background-color: #BF4158
  border-color: #AE0A23
  border-radius: .5em
  border-style: solid
  border-width: 2px
  color: #AE0A23
  font-family: Helvetica
  -webkit-transform: rotate(-10deg)
  -moz-transform: rotate(-10deg)
  -o-transform: rotate(-10deg)
  -ms-transform: rotate(-10deg)

/* Large desktop */
@media (min-width: 1200px)
  body
    padding-top: 50px
    padding-bottom: 40px

/* Portrait tablet to landscape and desktop */
@media (min-width: 768px) and (max-width: 979px)
  body
    padding-top: 20px
    padding-bottom: 0

  .jumbotron h1
    font-size: 2em

/* Landscape phone to portrait tablet */
@media (max-width: 767px)
  body
    padding-top: 20px
    padding-bottom: 0

  .jumbotron h1
    font-size: 2em

/* Landscape phones and down */
@media (max-width: 480px)
  body
    padding-top: 20px
    padding-bottom: 0

  .jumbotron h1
    font-size: 2em

